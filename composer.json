{
  "name": "iconagency/lagoon-drupal",
  "description": "Icon Agency Lagoon Integrations. Opinionated.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Icon Agency hello@iconagency.com.au",
      "role": "Developer"
    }
  ],
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "require": {
    "drupal/fastly": "3.14",
    "drupal/http_cache_control": "^2.0",
    "drupal/lagoon_logs": "^1.1.0",
    "drupal/purge": "^3.1",
    "drupal/stage_file_proxy": "^1.1",
    "drush/drush": "^10.6.0",
    "drupal/core-composer-scaffold": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "drupal/core-dev": "^9.2.6"
  },
  "scripts": {
    "pre-drupal-scaffold-cmd": [
      "mkdir -p config/sync",
      "mkdir -p config/dev"
    ]
  },
  "extra": {
    "patches": {
      "drupal/fastly": {
        "https://www.drupal.org/project/fastly/issues/2908228": "https://git.drupalcode.org/project/fastly/-/merge_requests/1.diff"
      }
    },
    "drupal-scaffold": {
      "file-mapping": {
        "[project-root]/.vscode/extensions.json": "assets/.vscode/extensions.json",
        "[project-root]/.vscode/settings.json": {
          "mode": "replace",
          "path": "assets/.vscode/settings.json",
          "overwrite": false
        },
        "[project-root]/drush/drush.yml": "assets/drush/drush.yml",
        "[project-root]/.ahoy.yml": "assets/.ahoy.yml",
        "[project-root]/phpcs.xml": "assets/phpcs.xml",
        "[project-root]/renovate.json": "assets/renovate.json",
        "[project-root]/config/dev/README.md": "assets/config/dev/README.md",
        "[project-root]/assets/README.md": "assets/assets/README.md",
        "[project-root]/README.md": {
          "mode": "replace",
          "path": "assets/README.md",
          "overwrite": false
        }
      }
    }
  },
  "suggest": {
    "amazeeio/drupal_integrations": "Integrate with Lagoon",
    "oomphinc/composer-installers-extender": "Install extra packages such as npm",
    "cweagans/composer-patches": "Patch up files"
  }
}
